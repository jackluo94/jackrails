<!DOCTYPE html>
<html>
  <head>
    <title>Jack - Rails 2017</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>

    <header>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bidpro-menu">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <% if show_logo %>

          <%= link_to image_tag("/assets/jacktitle.png", class:"setHeight"), root_path %>

        <% end %>

      </div>
      <div class="collapse navbar-collapse" id="bidpro-menu">
        <ul class="nav navbar-nav navbar-right">

          <li>
            <%= link_to "About Us", page_about_us_path %>
          </li>
          <li>
            <%= link_to "Contact Us", page_contact_us_path %>
          </li>

          <li>
            <%= link_to "Puzzle Maker", puzzles_new_path %>
          </li>

          <li>
            <%= link_to "Store Products", store_index_path %>
          </li>

          <li>
            <%= link_to "Blog", blogs_path %>
          </li>
          <li>
            <%= link_to "Calendar", page_calendar_path %>
          </li>
          <li>
            <%= link_to "Articles", articles_path %>
          </li>

          <% if user_signed_in? %>
              <li>
                <%= link_to "Preferences", edit_user_registration_path %>
              </li>
              <li>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }  %>
              </li>
          <% else %>
              <li>
                <%= link_to "Login", new_user_session_path %>
              </li>
          <% end %>


        </ul>
      </div>
    </div>
  </nav>
</header>

  <main>

    <% if(notice != "" && notice) %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if(alert != "" && alert) %>
        <p class="alert"><%= alert %></p>
    <% end %>

    <% if current_user %>
        <% if current_user.first_name && current_user.last_name %>
          <p> Hello <%= current_user.first_name + " " + current_user.last_name %></p>
        <% end %>
    <% end %>


    <%= yield %>

  </main>

  <footer class="text-center">
    <br/>
    Copyright &copy; 1994-2017 Jack
  </footer>


  </body>


</html>
